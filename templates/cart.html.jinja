<!doctype html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body style="background-image: linear-gradient(to right, lightblue, yellow);">
  {% include "components/navbar.html.jinja"%}
  <br>
  <h1 style="text-align: center" class="text-4xl font-bold underline"> Cart products</h1>
  <br>
  <br>
  {%if cart_items%}
  <main
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-5 max-w-4xl mx-auto p-6 mb-5 bg-blue-400 rounded-lg shadow-lg border-4 border-blue-600">
    {# Use to make for loops in html.jinja #}
    {% for x in cart_items %}
{# Individual Cart Item Card #}
<div class="grid gap-2 border-4 border-red-400 p-4 rounded-lg bg-lime-100 shadow-md hover:shadow-lg transition-shadow duration-300">
{# Product Image #}
  <img class="h-25 mx-auto bg-orange-300 p-2 rounded-lg shadow-md" src="{{ x['Image'] }}">
  {# Product Name #}
  <div class="text-center font-bold text-sm">{{ x["Name"] }}</div>
  {# Product Category #}
  <div class="text-center font-bold text-sm text-gray-600">{{ x["Category"] }}</div>
  {# Total Price or Out of Stock #}
  <div class="text-center font-bold text-sm">
    {% if x['Quantity'] > 0 %}
      Total: ${{ x['Price'] * x['Quantity'] }}
    {% else %}
      <span class="text-red-500 italic">Out of Stock</span>
    {% endif %}
  </div>
{ # Update Quantity Form #}
  <form method="POST" action="/cart/{{ x['ProductID'] }}/update_qty" class="flex flex-col items-center gap-2 mt-2">
    <input type="number" name="qty" value="{{ x['Quantity'] }}" min="0"
           class="border-2 border-blue-600 rounded-md p-2 w-24 text-center">
    
    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md shadow-md w-full text-xs">
      Update Quantity
    </button>
  </form>
{# Remove Item Button #}
  <form method="POST" action="/cart/{{ x['ProductID'] }}/delete_qty" class="text-center">
    <input type="hidden" name="qty" value="0">
    <button type="submit" class="text-red-600 hover:text-red-800 text-xs font-bold underline">
        Remove Item
    </button>
  </form>
{# Unit Price #}
  <div class="text-center text-xs text-gray-500 mt-2 border-t pt-2">
    Unit Price: ${{ x["Price"] }}
  </div>
</div>
{% endfor %}
  </main>

    <!-- Total & Checkout Section -->
  <div class="p-6 bg-green-200 rounded-lg shadow-lg border-4 border-blue-600 text-center max-w-4xl mx-4 md:mx-auto mb-5">
    <div class="text-2xl md:text-3xl font-bold">
      Cart Total: <span class="text-blue-700">${{ "%.2f"|format(total) }}</span>
    </div>
    {# Checkout Button #}
    <div class="flex justify-center">
      <a href="/checkout" 
         class="block w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg shadow-md transition-all duration-200 hover:scale-105 active:scale-95 text-lg">
         Proceed to Checkout
      </a>
    </div>
  </div>

  {% else %}
  <!-- Empty Cart State -->
  <div class="text-center p-8 bg-green-200 rounded-lg shadow-lg border-4 border-blue-600 max-w-4xl mx-4 md:mx-auto mb-5">
    <p class="text-xl md:text-2xl font-bold mb-4">Your cart is empty.</p>
    <a href="/browse" 
       class="inline-block bg-indigo-600 text-white px-6 py-2 rounded-full hover:bg-indigo-700 transition-colors shadow-sm">
       Browse Products
    </a>
  </div>
  {% endif %}
  
</html>