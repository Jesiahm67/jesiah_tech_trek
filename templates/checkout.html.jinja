<!doctype html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body style="background-image: linear-gradient(to right, lightblue, yellow);" class="min-h-screen pb-20">
  {% include "components/navbar.html.jinja"%}

  <div class="max-w-6xl mx-auto px-4 mt-10">
    <h1 class="text-center text-4xl font-bold underline mb-10">Checkout</h1>

    {% if cart_items %}
    <div class="flex flex-col lg:flex-row gap-8 items-start">
      
      <div class="w-full lg:w-3/5 bg-blue-400 p-6 rounded-lg shadow-lg border-4 border-blue-600">
        <h2 class="text-2xl font-bold text-white mb-4">1. Review Items</h2>
        <div class="grid grid-cols-1 gap-4">
          {% for x in cart_items %}
          <div class="flex items-center gap-4 border-2 border-red-400 p-4 rounded-lg bg-lime-100 shadow-sm transition-all hover:shadow-md">
            <img class="h-20 w-20 object-contain bg-orange-300 p-1 rounded-md border-2 border-orange-400" src="{{ x['Image'] }}">
            
            <div class="flex-1">
              <div class="font-bold text-lg leading-tight">{{ x["Name"] }}</div>
              <div class="text-sm text-gray-600 font-semibold mt-1">Qty: {{ x["Quantity"] }}</div>
            </div>

            <div class="text-right">
              <div class="text-blue-700 font-black text-xl">
                ${{ "%.2f"|format(x['Price'] * x['Quantity']) }}
              </div>
              <div class="text-[10px] text-gray-500 italic">(${{ "%.2f"|format(x['Price']) }} ea.)</div>
            </div>
          </div>
          {% endfor %}
        </div>
        
        <div class="mt-6 p-4 bg-green-200 rounded-lg border-4 border-green-600 flex justify-between items-center px-8">
            <span class="text-xl font-bold text-green-900 uppercase">Subtotal</span>
            <span class="text-3xl font-black text-green-900">${{ "%.2f"|format(total) }}</span>
        </div>
      </div>

      <div class="w-full lg:w-2/5 flex flex-col gap-6 lg:sticky lg:top-10">
        
        <div class="bg-yellow-100 p-6 rounded-lg shadow-lg border-4 border-blue-600">
          <h2 class="text-2xl font-bold underline text-center mb-6">2. Order Details</h2>
          
          <form class="space-y-4">
            <div>
              <label class="block font-bold text-sm mb-1 uppercase text-gray-700">Account Email</label>
              <input type="text" value="{{ current_user.email }}" readonly class="w-full bg-blue-100 p-3 rounded border-b-4 border-blue-600 cursor-not-allowed font-semibold text-blue-900">
            </div>
            
            <div>
              <label class="block font-bold text-sm mb-1 uppercase text-gray-700">Shipping Address</label>
              <textarea class="w-full bg-white p-3 rounded border-b-4 border-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" rows="3">{{ current_user.address }}</textarea>
            </div>
          </form>

          <div class="mt-6 text-center border-t border-yellow-300 pt-4">
             <p class="text-[10px] italic text-gray-500 mb-2 uppercase">Is this information incorrect?</p>
             <a href="/logout" class="text-blue-600 hover:text-blue-800 underline font-black text-xs uppercase tracking-widest">Logout / Switch User</a>
          </div>
        </div>

        <form method="post" action="/checkout/confirm">
          <button type="submit"
            class="w-full bg-green-600 hover:bg-green-700 text-white font-extrabold py-5 px-8 rounded-xl shadow-2xl transition-all duration-200 hover:scale-105 active:scale-95 text-2xl border-b-8 border-green-800 group">
            <span class="inline-block group-hover:animate-pulse">CONFIRM PURCHASE</span>
          </button>
        </form>
        
        <div class="flex items-center justify-center gap-2 text-gray-500 text-[10px] mt-2 font-bold uppercase tracking-widest">
            <span class="text-green-600 text-base">âœ”</span> Encrypted & Secure Checkout
        </div>
      </div>

    </div>

    {% else %}
    <div class="text-center p-12 bg-white rounded-lg shadow-lg border-4 border-blue-600 max-w-xl mx-auto">
      <p class="text-2xl font-bold mb-6">Your cart is empty!</p>
      <a href="/browse" class="inline-block bg-blue-600 text-white px-10 py-4 rounded-full font-black hover:bg-blue-700 transition-transform hover:scale-110">GO FIND PARTS</a>
    </div>
    {% endif %}
  </div>

</body>
</html>
