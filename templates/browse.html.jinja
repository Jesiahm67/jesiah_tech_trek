<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body style="background-image: linear-gradient(to right, lightblue, yellowgreen);">
    {% include "components/navbar.html.jinja"%}
<div>

</div>
    <h1 style="text-align: center" class="text-3xl font-bold underline">
    <br>
      Browse Page
    </h1>
    <br>

<main class="grid grid-cols-3 gap-3 max-w-4xl mx-auto p-6 mb-5">
    {% for x in products %}
    {# use grid to be rigid layout #}
    <a href="/product/{{ x['ID']}}" class="grid gap-2 border p-4 rounded-lg bg-lime-100">
    {# Set height of image, and use mx-auto to center #}
    <img class="h-25 mx-auto" src=" {{ x['Image'] }} " >
    <div class="text-center font-bold text-sm">{{ x["Name"] }}</div>
    <div class="text-center font-bold text-sm">${{x["Price"]}}</div>
    
    </a>
    {% endfor%}
    </main>
  </body>
</html>