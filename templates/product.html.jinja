<!doctype html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body style="background-image: linear-gradient(to right, lightblue, pink);">
  {% include "components/navbar.html.jinja"%}
  <br>
  <br>
  {# The div's class styles the page so it looks formated like the items being in the center making a rounded box
  outside the text #}
  <!-- Product Display Container -->
  <div class="max-w-4xl mx-auto mt-10 p-6 bg-green-200 rounded-lg shadow-lg border-4 border-blue-600 ring-8 ring-blue-300 hover:shadow-2xl transition-shadow">
    <div class="grid gap-6 md:grid-cols-2 items-center text-center text-gray-800">

      <!-- Image + Name + Price -->
      <div class="flex flex-col items-center"> <img src="{{ product['Image'] }}" alt="Product Image"
          class="w-48 h-48 object-contain p-2 rounded-lg shadow-md bg-orange-300 border-2 border-orange-400">
        <div class="font-bold text-lg mt-2">{{ product["Name"] }}</div>
        <div class="font-bold text-md text-green-700">${{ product["Price"] }}</div>
      </div> <!-- Description -->
      <div class="font-bold text-lg md:text-base px-4">{{ product["Description"] }}</div>
    </div>
  </div>

  <!-- Add to Cart Form -->
  <form method="post" action="/product/{{ product['ID'] }}/add_to_cart"
    class="bg-yellow-100 p-6 rounded-lg max-w-2xl mx-auto mt-10 shadow-lg border-4 border-blue-600">

    <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
      <label for="quantity" class="font-bold text-lg">Quantity:</label>

      <input type="number" id="quantity" name="Quantity" value="1" min="1" max="5"
        class="border-2 border-blue-600 rounded-md p-2 w-20 text-center">

      <button
        class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition duration-150 ease-in-out">
        Add to Cart
      </button>
    </div>
  </form>
  <!-- Customer Reviews Section -->
  {% if reviews %}
  <form method="post"
    class="text-center mt-4 max-w-xl mx-auto p-6 bg-red-100 rounded-lg shadow-lg border-4 border-blue-600">
    {% for x in reviews%}
    <!-- Individual Review Card -->
    <div class="font-bold text-xl mb-6">Customer Reviews</div>  <!-- Individual Review Box -->
    <div class="border-2 border-gray-400 p-4 rounded-lg bg-white shadow-md hover:shadow-lg transition mb-6">
      <div class="font-semibold text-lg mb-1">Name: {{ x['Name'] }}</div>
      <div class="font-semibold text-md mb-2">Rating: {{ x['Ratings'] }} / 5</div>
      <div class="text-sm text-gray-700 mb-2">{{ x['Comments'] }}</div>
      <div class="text-xs text-gray-500 border-t pt-2"> Timestamp: {{ x['Timestamp'].strftime('%F') }} </div>
    </div> 
    {% endfor %}
  </form>
{% else %}

  <div
    class="text-center mt-4 max-w-xl mx-auto p-6 bg-red-100 rounded-lg shadow-lg border-4 border-blue-600 font-bold text-xl">
    No reviews yet. Be the first to review this product!
  </div>
{% endif %}
  <!-- Review Submission Form -->
  <div class="max-w-lg mx-auto p-6 bg-white rounded-xl shadow-sm border mt-10 border-4 border-blue-600">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Share your experience</h3>
    {# Form to submit a review for the product #}
    <form method="post" action="/product/{{ product['ID'] }}/review" class="space-y-4">
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Overall Rating</label>
        <div class="flex items-center gap-1 text-yellow-400">
          <input type="number" name="rating" min="1" max="5" required
            class="w-20 p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
          <span class="text-gray-500 text-sm">/ 5 Stars</span>
        </div>
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Your Review</label>
        <textarea name="comments" rows="4" placeholder="What did you like or dislike?"
          class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all resize-none"></textarea>
      </div>
      <button type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg shadow-sm hover:shadow-md transform active:scale-[0.98] transition-all duration-150">
        Post Review
      </button>
    </form>
  </div>

</body>

</html>