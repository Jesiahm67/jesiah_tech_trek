<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body style="background-image: linear-gradient(to right, lightblue, yellow);" class="min-h-screen pb-10">
  {% include "components/navbar.html.jinja"%}

  <div class="max-w-6xl mx-auto px-4 sm:px-6 mt-6 md:mt-10">
    <h1 class="text-center text-2xl md:text-4xl font-bold underline mb-6 md:mb-10 text-orange-800 uppercase tracking-tight">
        Checkout
    </h1>
{# Use to make for loops in html.jinja #}
    {% if cart_items %}
    <div class="flex flex-col lg:flex-row gap-6 md:gap-8 items-start">
      {# Review Items Section #}
      <div class="w-full lg:w-3/5 bg-blue-400 p-4 md:p-6 rounded-lg shadow-lg border-4 border-blue-600">
        <h2 class="text-xl md:text-2xl font-bold text-white mb-4">Review Items</h2>
        
        <div class="grid grid-cols-1 gap-3 md:gap-4">
          {% for x in cart_items %}
          {# Individual Cart Item Row #}
          <div class="flex items-center gap-3 md:gap-4 border-2 border-red-400 p-3 md:p-4 rounded-lg bg-lime-100 shadow-sm">
            <img class="h-16 w-16 md:h-20 md:w-20 object-contain bg-orange-300 p-1 rounded-md border-2 border-orange-400 flex-shrink-0" src="{{ x['Image'] }}">
            
            <div class="flex-1 min-w-0">
            {# Product Name and Quantity #}
              <div class="font-bold text-xs md:text-lg leading-tight ">{{ x["Name"] }}</div>
        
              <div class="text-xs md:text-sm text-gray-600 font-semibold mt-1 dark:text-gray-900">Qty: {{ x["Quantity"] }}</div>
            </div>

            <div class="text-right flex-shrink-0 ml-2">
              <div class="text-blue-700 font-black text-sm text-base md:text-xl leading-none">
              {# Total Price #}
                ${{ "%.2f"|format(x['Price'] * x['Quantity']) }}
              </div>
              <div class="hidden sm:block text-[10px] text-gray-500 italic mt-1 dark:text-gray-900">
                (${{ "%.2f"|format(x['Price']) }} ea.)
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
        {# Subtotal Section #}
        <div class="mt-6 p-4 bg-green-200 rounded-lg border-4 border-green-600 flex flex-row justify-between items-center px-4 md:px-8">
            <span class="text-sm md:text-xl font-bold text-green-900 uppercase">Subtotal</span>
            <span class="text-xl md:text-3xl font-black text-green-900 leading-none ">
                ${{ "%.2f"|format(total) }}
            </span>
        </div>
      </div>

      <div class="w-full lg:w-2/5 flex flex-col gap-6 lg:sticky lg:top-10 ">
        {# Order Details Form #}
        <div class="bg-green-100 p-5 md:p-6 rounded-lg shadow-lg border-4 border-blue-700">
          <h2 class="text-xl md:text-2xl font-bold underline text-center mb-6">Order Details</h2>
          {# User Information Form #}
          <form  method="post"class="space-y-4 md:space-y-6 w-full">
            <div>
              <label class="block font-bold text-xs md:text-sm mb-1 uppercase text-gray-900">Full Name *</label>
              <input type="text" required value="{{ current_user.name }}" class="w-full bg-white p-3 rounded border-b-4 border-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 text-sm md:text-base hover:shadow-lg transition-shadow duration-200">
            </div>
            <div>
              <label class="block font-bold text-xs md:text-sm mb-1 uppercase text-gray-900">Account Email *</label>
              <input required type="text" value="{{ current_user.email }}" readonly class="w-full bg-blue-100 p-3 rounded border-b-4 border-blue-600 cursor-not-allowed font-semibold text-blue-900 text-sm md:text-base hover:shadow-lg transition-shadow duration-200">
            </div>
            
            <div>
              <label class="block font-bold text-xs md:text-sm mb-1 uppercase text-gray-900">Shipping Address *</label>
              <input required  rows="3" class="w-full bg-white p-3 rounded border-b-4 border-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 text-sm md:text-base hover:shadow-lg transition-shadow duration-200"></input>
            </div>
          </form>

          <div class="mt-5 text-center border-t-2 border-yellow-300 pt-4">
             <p class="text-[10px] md:text-[12px] italic text-gray-500 mb-2 uppercase">Incorrect info?</p>
             <a href="/logout" class="text-blue-600 hover:text-blue-800 underline font-black text-xs md:text-sm uppercase tracking-widest">Logout/Wrong Account</a>
          </div>
        </div>
        {# Confirm Purchase Button #}
        <form method="post" class="w-full p-4 md:p-6 text-center">
            <button class="w-full bg-green-600 hover:bg-green-700 text-white font-extrabold py-4 md:py-5 px-4 rounded-xl shadow-2xl transition-all duration-200 hover:scale-[1.02] active:scale-95 text-base md:text-xl lg:text-2xl border-b-8 border-green-800 group">
                <span class="inline-block group-hover:animate-pulse">CONFIRM PURCHASE</span>
            </button>
        </form>
      </div>

    </div>

    {% else %}
    {# Empty Cart State #}
    <div class="text-center p-8 md:p-12 bg-yellow-100 rounded-lg shadow-lg border-4 border-blue-600 max-w-xl mx-auto mt-10 text-gray-900">
      <p class="text-xl md:text-2xl font-bold mb-6 uppercase">Your cart is empty!</p>
      <a href="/browse" class="inline-block bg-blue-600 text-white px-8 py-3 md:py-4 rounded-full font-black hover:bg-blue-700 transition-all hover:scale-110 shadow-xl">
        GO FIND PARTS
      </a>
    </div>
    {% endif %}
  </div>

</body>
</html>
