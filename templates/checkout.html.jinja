<!doctype html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body style="background-image: linear-gradient(to right, lightblue, yellow);">
  {% include "components/navbar.html.jinja"%}
  <br>
  <h1 style="text-align: center" class="text-4xl font-bold underline"> Checkout</h1>
  <br>
  <br>
  {%if cart_items%}
  <main class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 gap-5 max-w-2xl ml-6 p-6 mb-5 bg-blue-400 rounded-lg shadow-lg border-4 border-blue-600">

    {# Use to make for loops in html.jinja #}
    {% for x in cart_items %}

<div class="grid gap-2 border-4 border-red-400 p-4 rounded-lg bg-lime-100 shadow-md hover:shadow-lg transition-shadow duration-300">

  <img class="h-25 mx-auto bg-orange-300 p-2 rounded-lg shadow-md" src="{{ x['Image'] }}">
  <div class="text-center font-bold text-sm">{{ x["Name"] }}</div>
  <div class="text-center font-bold text-sm text-gray-600">{{ x["Category"] }}</div>
  
  <div class="text-center font-bold text-sm">
    {% if x['Quantity'] > 0 %}
      Total: ${{ x['Price'] * x['Quantity'] }}
    {% else %}
      <span class="text-red-500 italic">Out of Stock</span>
    {% endif %}
  </div>

  <form method="POST" action="/cart/{{ x['ProductID'] }}/update_qty" class="flex flex-col items-center gap-2 mt-2">
    <input type="number" name="qty" value="{{ x['Quantity'] }}" min="0"
           class="border-2 border-blue-600 rounded-md p-2 w-24 text-center">
    
    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md shadow-md w-full text-xs">
      Update Quantity
    </button>
  </form>

  <form method="POST" action="/cart/{{ x['ProductID'] }}/delete_qty" class="text-center">
    <input type="hidden" name="qty" value="0">
    <button type="submit" class="text-red-600 hover:text-red-800 text-xs font-bold underline">
        Remove Item
    </button>
  </form>

  <div class="text-center text-xs text-gray-500 mt-2 border-t pt-2">
    Unit Price: ${{ x["Price"] }}
  </div>
</div>
{% endfor %}
  </main>
<main class="">
  <form method="post" class="modal-content animate bg-yellow-100 p-6 rounded-lg max-w-3xl mx-auto mt-10 shadow-lg border-4 border-blue-600 items-center"> 
    <div class="grid gap-3 max-w-4xl mx-auto ">
    <br>
      <p style="text-align: center" class="text-3xl font-bold underline">Login</p>
      
      <label for="email"><b>Email</b></label>
      <input type="text" required placeholder="Enter Email" name="email" class="bg-blue-400 p-2 flex items-center justify-between shadow-lg border-b-4 border-blue-600">
<br><br><br><br><br><br>


      <label for="psw"><b>Password</b></label>
      <input type="password" required placeholder="Enter Password" name="psw" class="bg-blue-400 p-2 flex items-center justify-between shadow-lg border-b-4 border-blue-600">
<br><br><br><br><br><br>


  <div style="text-align: center;" >
  <button class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition duration-150 ease-in-out justify-center text-center">
   <a href="/signup" style="color: white; text-decoration-line: underline;">
No account
  </div>
  </a>
</button>
    </div>
  </form>
</div>
</main>
  <div class=" p-6 bg-green-200 rounded-lg shadow-lg border-4 border-blue-600 text-center max-w-4xl mx-auto mb-5">
    <div class="text-2xl font-bold">
      Cart Total:
${{ total }}
    </div>
  </div>
  {% else %}
  <div class="text-center p-6 bg-green-200 rounded-lg shadow-lg border-4 border-blue-600 max-w-4xl mx-auto mb-5">
    <p class="text-xl font-bold">Your cart is empty.</p>
    <a href="/browse" class="hover:underline font-semibold" style="color: indigo;">Browse</a>
  </div>
  
  {% endif %}
<div class="flex justify-center mb-10">
<form method="post" action="/checkout/confirm" class="text-center">
  <button type="submit"
    class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg shadow-md transition-all duration-200 hover:scale-105 active:scale-95 text-lg">
    Confirm Purchase
  </button>
</div>
</form>
</body>

</html>